@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Order";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Order List</li>
    </ol>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">

            <div class="card-header">

                <button class="btn btn-info btn-icon btn-sm text-white mr-2">
                    <span>
                        <i class="fa fa-list"></i>
                    </span> OrderItemList
                </button>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="Order_Tb" class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline" style="width:100%">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Pincode</th>
                                <th>Country Name</th>
                                <th>State Name</th>
                                <th>City Name</th>
                                <th>PrimaryPhone Number</th>
                                <th>AlternatePhone Number</th>
                                <th>MailId</th>
                                <th>House Number</th>
                                <th>AddressLine1</th>
                                <th>LandMark</th>
                                <th>Total Quantity</th>
                                <th>Total Amount</th>
                                <th>Action</th>

                                <th>OrderItem</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
@section scripts {
    <script>

        //List
        loadOrder()
        async function loadOrder() {
            var table = $('#Order_Tb').DataTable();
            table.destroy();
            table = $('#Order_Tb').dataTable({
                "paginationType": "full_numbers",
                "dom": 'Bfrtip',
                "buttons": ['excel', 'print'],
                "searching": true,
                "paging": true,
                "sort": true,
                "info": true,
                "ajax": {
                    "url": '@apiUrl/api/Order/GetAllOrderList',
                    "type": "GET",
                    "dataType": "json",
                    "headers": {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    "error": function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                },
                "order": [],
                "columns": [
                    { "data": "fullName", "orderable": true, "visible": true },
                    { "data": "pincode", "orderable": true, "visible": true },
                    { "data": "countryName", "orderable": true, "visible": true },
                    { "data": "stateName", "orderable": true, "visible": true },
                    { "data": "cityName", "orderable": true, "visible": true },
                    { "data": "primaryPhone", "orderable": true, "visible": true },
                    { "data": "alternatePhone", "orderable": true, "visible": true },
                    { "data": "mailId", "orderable": true, "visible": true },
                    { "data": "houseNumber", "orderable": true, "visible": true },
                    { "data": "addressLine1", "orderable": true, "visible": true },
                    { "data": "landMark", "orderable": true, "visible": true },
                    { "data": "totalQuantity", "orderable": true, "visible": true },
                    { "data": "totalAmount", "orderable": true, "visible": true },
                    {
                        "render": function (data, type, row) {
                            return  '&nbsp&nbsp<button class="btn btn-sm btn-danger" data-target="#delete" data-id=' + row.orderId + ' data-title="Delete"><i class="fa fa-trash"></i></button>';

                        }
                    },
                    {
                        "render": function (data, type, row) {
                            return '  &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp  &nbsp&nbsp &nbsp&nbsp<a class="btn btn-sm btn-info" title="OrderItem" href="../Order/OrderItemList?orderId=' + row.orderId + '"><i class="fa fa-list"></i></a>';

                        }
                    }
                ]
            });
        }

        //Delete
        $('#Order_Tb tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');
            swal({
                html: true,
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, confirm it!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Order/DeleteOrder/" + id + "/" + @Context.Session.GetInt32("UserId"),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status == 200) {
                            $('#Order_Tb').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                title: "Order",
                                text: "Successfully deleted!",
                                type: "success"
                            });
                        } else if (xhr.status == 202) {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                });
            });
        });

    </script>
}
