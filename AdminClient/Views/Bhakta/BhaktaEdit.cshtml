@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Bhakta";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Consol</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bhakta Edit</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Bhakta/BhaktaList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Bhakta Edit</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Bhakta Name &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="BhaktaName" placeholder="Enter Bhakta Name " required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Address &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="Address" placeholder="Enter Address" required>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Primary Phone &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="number" class="form-control" id="PrimaryPhone" placeholder="Enter Primary Phone " required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Alternate Phone &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="number" class="form-control" id="AlternatePhone" placeholder="Enter Alternate Phone" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Mail Id &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="MailId" placeholder="Enter Mail Id " required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Date Of Birth &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="date" class="form-control" id="DateOfBirth" placeholder="Enter Date Of Birth" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Password &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="password" class="form-control" id="Password" placeholder="Enter Password" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Bhakta Image &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="file" class="form-control" id="BhaktaImage" placeholder="Enter Bhakta Image" required>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" id="btnupdate" class="btn btn-radius btn-success">Update</button>
                            <a type="button" href="~/Bhakta/BhaktaList" class="btn btn-radius btn-danger">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var BhaktaId = @ViewBag.BhaktaId
            loadSingleBhakta()
        function loadSingleBhakta() {
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Bhakta/GetSingleBhakta/" + BhaktaId,
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (data) {
                    if (data) {
                        $('#BhaktaName').val(data.bhaktaName);
                        $('#Address').val(data.address);
                        $('#PrimaryPhone').val(data.primaryPhone);
                        $('#AlternatePhone').val(data.alternatePhone);
                        $('#MailId').val(data.mailId);
                        $('#DateOfBirth').val(data.dateOfBirth);
                        $('#Password').val(data.password);
                        $('#BhaktaImage').val(data.bhaktaImage);
                    }
                    else {
                        sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    }
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        $("#btnupdate").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {

                var model = {
                    bhaktaId: BhaktaId,
                    
                    bhaktaName: $.trim($("#BhaktaName").val()),
                    address: $.trim($("#Address").val()),
                    primaryPhone: $.trim($("#PrimaryPhone").val()),
                    alternatePhone: $.trim($("#AlternatePhone").val()),
                    mailId: $.trim($("#MailId").val()),
                    dateOfBirth: $.trim($("#DateOfBirth").val()),
                    password: $.trim($("#Password").val()),
                    bhaktaImage: $.trim($("#BhaktaImage").val()),

                    updatedBy: @Context.Session.GetInt32("UserId"),
                }
                console.log(model)
                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/Bhakta/UpdateBhakta",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },

                    success: function (data, statusText, xhr) {
                        console.log(data)
                        if (xhr.status === 200) {
                            $('#Bhakta_Tb').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                icon: "success",
                                title: "Bhakta Update Order",
                                text: "Successfully updated!",
                                type: "success"
                            });
                        } else if (data.status === "duplicate") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else if (data.status === "error") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        console.log(data);
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });
    </script>
}
