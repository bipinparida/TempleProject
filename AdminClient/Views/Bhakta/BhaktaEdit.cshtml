@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Bhakta";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Consol</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bhakta Edit</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Bhakta/BhaktaList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Bhakta Edit</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Bhakta Name &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="BhaktaName" placeholder="Bhakta Name " required>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Mobile Number &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="number" class="form-control" id="PrimaryPhone" placeholder="Mobile Number" required>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Password &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="Password" placeholder="Password" required>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" id="Address" placeholder="Address" >
                            </div>
                        </div>

                    </div>

                     <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Alternate Mobile Number </label>
                                <input type="number" class="form-control" id="AlternatePhone" placeholder="Alternate Mobile Number" >
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Mail Id </label>
                                <input type="text" class="form-control" id="MailId" placeholder="Mail Id " >
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Date Of Birth </label>
                                <input type="date" class="form-control" id="DateOfBirth">
                            </div>
                        </div>


                        @*  <div class="col-md-3">
                        <div class="form-group">
                        <label class="form-label">Bhakta Image &nbsp;<span style="color: red;"><b>*</b></span></label>
                        <input type="file" class="form-control" id="BhaktaImage">
                        </div>
                        </div> *@

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Bhakta Image &nbsp;</label>
                                <input type="file" class="form-control" id="BhaktaImage" accept=".jpg, .jpeg">
                                <small @* class="form-text text-muted"*@ style="color:red">Only JPG files are allowed.</small>

                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <img id="imgg" src="" width="100" class="rounded-circle">
                            </div>
                        </div>

                     </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" id="btnupdate" class="btn btn-radius btn-success">Update</button>
                            <a type="button" href="~/Bhakta/BhaktaList" class="btn btn-radius btn-danger">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section scripts {
    <script>
        var BhaktaId = @ViewBag.BhaktaId
            loadSingleBhakta()
        function loadSingleBhakta() {
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Bhakta/GetSingleBhakta/" + BhaktaId,
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (data) {
                    if (data) {
                        $('#BhaktaName').val(data.bhaktaName);
                        $('#Address').val(data.address);
                        $('#PrimaryPhone').val(data.primaryPhone);
                        $('#AlternatePhone').val(data.alternatePhone);
                        $('#MailId').val(data.mailId);
                        // $('#DateOfBirth').val(data.dateOfBirth);

                        if (data.dateOfBirth != null) {
                            var dateTimeString = data.dateOfBirth;
                            var dateOnly = dateTimeString.split('T')[0]; // Extract the date portion
                            $('#DateOfBirth').val(dateOnly);
                        } else {
                            $('#DateOfBirth').val('');
                        }

                        $('#Password').val(data.password);
                        $('#imgg').attr('src', data.bhaktaImage);
                    }
                    else {
                        sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    }
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        $("#btnupdate").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {
                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg').attr('src');

                if ($('#BhaktaImage').val() != '' && $('#BhaktaImage').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                var model = {
                    bhaktaId: BhaktaId,
                    
                    bhaktaName: $.trim($("#BhaktaName").val()),
                    address: $.trim($("#Address").val()),
                    primaryPhone: $.trim($("#PrimaryPhone").val()),
                    alternatePhone: $.trim($("#AlternatePhone").val()),
                    mailId: $.trim($("#MailId").val()),
                    dateOfBirth: $.trim($("#DateOfBirth").val()) == '' ? null : $.trim($("#DateOfBirth").val().replace(/\//g, '-')),
                    password: $.trim($("#Password").val()),
                    bhaktaImage: imgPath,
                    updatedBy: @Context.Session.GetInt32("UserId"),
                }
                console.log(model)
                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/Bhakta/UpdateBhakta",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },

                    // success: function (data, statusText, xhr) {
                    //     console.log(data)
                    //     if (xhr.status === 200) {
                    //         $('#Bhakta_Tb').DataTable().ajax.reload(null, false);
                    //         sweetAlert({
                    //             html: true,
                    //             icon: "success",
                    //             title: "Bhakta Update Order",
                    //             text: "Successfully updated!",
                    //             type: "success"
                    //         });
                    //     } else if (data.status === "Duplicate") {
                    //         sweetAlert("Validation Alert!", data.responseMsg, "warning");
                    //     } else if (data.status === "Error") {
                    //         sweetAlert("Validation Alert!", data.responseMsg, "warning");
                    //     } else {
                    //         sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    //     }
                    // },

                    success: function (data, statusText, xhr) {
                        if (xhr.status === 200) {
                            Swal.fire({
                                icon: "success",
                                title: "Bhakta Update",
                                text: "Successfully updated!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });

                            //preloader.addClass("d-none");
                        } else if (data.status === "Duplicate") {
                            Swal.fire({
                                icon: "warning",
                                title: "Bhakta Already Exists!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else if (data.status === "error") {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: "Something unexpected!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        }
                        preloader.addClass("d-none");
                    },

                    error: function (data) {
                        console.log(data);
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });

        function uploadphoto() {
            var totalFiles = document.getElementById('BhaktaImage').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('BhaktaImage').files;
                formData.append("file", files[0]);
                $.ajax(
                    {
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",

                        success: function (data) {
                            imgPath = data;

                        },
                        error: function (data) {
                            window.location.replace('/Message/SessionExpire');
                        }
                    }
                );
            }
        }

        $("#btnupdate").click(function (e) {
            // Prevent form submission if fields are empty
            var bhaktaName = $.trim($("#BhaktaName").val());
            var primaryPhone = $.trim($("#PrimaryPhone").val());
            var password = $.trim($("#Password").val());

            if (bhaktaName === "" || primaryPhone === "" || password === "") {
                e.preventDefault();
                Swal.fire({
                    icon: "warning",
                    title: "Validation Alert!",
                    text: "Please complete Name , Mobile Number & Password fields!",
                });
                return;
            }


        });

    </script>
}
