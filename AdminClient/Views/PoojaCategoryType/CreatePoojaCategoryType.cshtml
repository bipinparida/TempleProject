@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "PoojaCategoryType";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Consol</a></li>
        <li class="breadcrumb-item active" aria-current="page">PoojaCategory Type Create</li>
    </ol>
    <div class="ml-auto">
        <a href="~/PoojaCategoryType/PoojaCategoryTypeList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>
<!-- PAGE-HEADER END -->

<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">PoojaCategory Type Create</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">PoojaCategory Type Name &nbsp;<span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="PoojaCategoryTypeName" placeholder="Enter PoojaCategory Type Name" required>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">PoojaCategoryType Image &nbsp;</label>
                                <input type="file" class="form-control" id="PoojaCategoryTypeImage" accept=".png,.jpg, .jpeg">
                                <small @* class="form-text text-muted"*@ style="color:red">Only JPG and PNG files are allowed.</small>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" id="btncreate" class="btn btn-radius btn-success">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section scripts {
    <script>
        //Create
        $(function () {

            $("#btncreate").click(function (e) {

                if (!document.getElementById("formPost").checkValidity()) {
                    e.preventDefault();
                }
                else {
                    imgPath = '';
                    var totalFiles = document.getElementById('PoojaCategoryTypeImage').files.length;
                    if (totalFiles > 0) {
                        uploadFile();
                    }
                    var model = {
                        poojaCategoryTypeName: $.trim($("#PoojaCategoryTypeName").val()),
                        poojaCategoryTypeImage: imgPath,

                        createdBy: @Context.Session.GetInt32("UserId"),
                    }
                    console.log(model)
                    $.ajax({
                        type: "POST",
                        url: "@apiUrl/api/PoojaCategoryType/PoojaCategoryTypeCreate",
                        data: JSON.stringify(model),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                        },
                        dataType: "json",
                        // success: function (data, statusText, xhr) {
                        //     if (xhr.status === 200) {

                        //         sweetAlert({
                        //             html: true,
                        //             icon: "success",
                        //             title: "Country",
                        //             text: "Successfully created!",
                        //             type: "success"
                        //         });
                        //     } else if (data.status === "duplicate") {
                        //         sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        //     } else if (data.status === "error") {
                        //         sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        //     } else {
                        //         sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        //     }
                        // },

                        success: function (data, statusText, xhr) {
                            if (xhr.status === 200) {
                                Swal.fire({
                                    icon: "success",
                                    title: "PoojaCategoryType Create",
                                    text: "Successfully Created!",
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });

                                //preloader.addClass("d-none");
                            } else if (data.status === "Duplicate") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "PoojaCategoryType Already Exists!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            } else if (data.status === "error") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            } else {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: "Something unexpected!",
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            }
                            preloader.addClass("d-none");
                        },

                        error: function (data) {
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else if (data.status == 400) {
                                sweetAlert("Validation Alert!", "Please check input data!", "warning");
                            }
                        }
                    });
                }
            });
            function uploadFile() {
                var totalFiles = document.getElementById('PoojaCategoryTypeImage').files.length;
                if (totalFiles > 0) {
                    var formData = new FormData();
                    var files = document.getElementById('PoojaCategoryTypeImage').files;
                    formData.append("file", files[0]);
                    $.ajax(
                        {
                            url: "/Upload/ImgUpload",
                            data: formData,
                            processData: false,
                            contentType: false,
                            async: false,
                            type: "POST",
                            success: function (data) {
                                imgPath = data;

                            },
                            error: function (data) {
                                window.location.replace('/Message/SessionExpire');
                            }
                        }
                    );
                }

            }
        });
    </script>
}
