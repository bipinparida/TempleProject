    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section scripts {
    <script>

        function CategoryList(Id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Category/GetCategoryList",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push('<option value = ""> Select Category </option>');
                    for (var i = 0; i < res.data.length; i++) {
                        if (Id == res.data[i].categoryId) {
                            opt = 'selected'
                        } else {
                            opt = '';
                        }
                        options.push('<option value = "' + res.data[i].categoryId + '" ' + opt + ' > ' + res.data[i].categoryName + '</option>');
                    }
                    $("#SelectCategory").html(options.join(''));
                },

                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        var productId = @ViewBag.ProductId
            loadSingleProduct()
        function loadSingleProduct() {
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Product/GetSingleProduct/" + productId,
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (data) {
                    if (data) {
                        CategoryList(data.categoryId);
                        $('#ProductName').val(data.productName);
                        $('#SalePrice').val(data.salePrice);
                        $('#MRP').val(data.mrp);
                        $('#DiscountAmount').val(data.discountAmount);
                        $('#imgg').attr('src', data.thumbnail);
                        $('#imgg1').attr('src', data.image1);
                        $('#imgg2').attr('src', data.image2);
                        $('#imgg3').attr('src', data.image3);
                        $('#imgg4').attr('src', data.image4);
                        $('#Description').val(data.description);
                    }
                    else {
                        sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    }
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        $("#btnupdate").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {
                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg').attr('src');

                if ($('#Image').val() != '' && $('#Image').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg1').attr('src');

                if ($('#Image1').val() != '' && $('#Image1').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg2').attr('src');

                if ($('#Image2').val() != '' && $('#Image2').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg3').attr('src');

                if ($('#Image3').val() != '' && $('#Image3').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#imgg4').attr('src');

                if ($('#Image4').val() != '' && $('#Image4').val() != 'Choose file') {
                    uploadphoto();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }
                var model = {
                    productId: productId,
                    categoryId: $.trim($("#SelectCategory").val()),
                    productName: $.trim($("#ProductName").val()),
                    salePrice: $.trim($("#SalePrice").val()),
                    mrp: $.trim($("#MRP").val()),
                    discountAmount: $.trim($("#DiscountAmount").val()),
                    thumbnail: imgPath,
                    image1: imgPath,
                    image2: imgPath,
                    image3: imgPath,
                    image4: imgPath,
                    description: $.trim($("#Description").val()),

                    updatedBy: @Context.Session.GetInt32("UserId"),
                }
                console.log(model)
                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/Product/UpdateProduct",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    success: function (data, statusText, xhr) {
                        if (xhr.status === 200) {
                            Swal.fire({
                                icon: "success",
                                title: "Product Update",
                                text: "Successfully updated!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });

                            //preloader.addClass("d-none");
                        } else if (data.status === "Duplicate") {
                            Swal.fire({
                                icon: "warning",
                                title: "Product Already Exists!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else if (data.status === "error") {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: "Something unexpected!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        }
                        preloader.addClass("d-none");
                    },
                    error: function (data) {
                        console.log(data);
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });

        function uploadphoto() {
            var totalFiles = document.getElementById('Thumbnail').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('Thumbnail').files;
                formData.append("file", files[0]);
