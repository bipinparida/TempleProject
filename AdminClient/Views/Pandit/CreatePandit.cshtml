@section scripts {
    <script>
        Getstate()
        async function Getstate(Id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Country/GetCountryList",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push(' <option value = ""> Select Country </option> ');
                    for (var i = 0; i < res.data.length; i++) {
                        options.push('<option value = "' + res.data[i].countryId + '" ' + opt + ' > ' + res.data[i].countryName + '</option>');
                    }
                    $("#Selectcountry").html(options.join(''));
                },

                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        $("#Selectcountry").change(function () {
            var vcountryid = $("#Selectcountry").val()
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/State/GetStateListbyCountryid/' + vcountryid,
                dataType: "json",
                success: function (data) {
                    var options = [];
                    options.push('<option>Select State</option>');
                    for (var i = 0; i < data['data'].length; i++) {
                        options.push('<option value="' + data['data'][i].stateId + '" ' + opt + '>' + data['data'][i].stateName + '</option>');
                    }
                    $("#SelectState").html(options.join(''));

                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });

        $("#SelectState").change(function () {
            var vstateId = $("#SelectState").val()
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/City/GetCityListbystateid/' + vstateId,
                dataType: "json",
                success: function (data) {
                    var options = [];
                    options.push('<option>Select City</option>');
                    for (var i = 0; i < data['data'].length; i++) {
                        options.push('<option value="' + data['data'][i].cityId + '" ' + opt + '>' + data['data'][i].cityName + '</option>');
                    }
                    $("#SelectCity").html(options.join(''));

                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });

        Gettemple()
        async function Gettemple(Id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Temple/GetTempleList",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push(' <option value = ""> Select Temple </option> ');
                    for (var i = 0; i < res.data.length; i++) {
                        if (Id == res.data[i].templeId) {
                            opt = 'selected'
                        } else {
                            opt = '';
                        }
                        options.push('<option value = "' + res.data[i].templeId + '" ' + opt + ' > ' + res.data[i].templeName + '</option>');
                    }
                    $("#SelectTemple").html(options.join(''));
                },

                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }


        $("#btncreate").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {
                imgPath = '';
                var totalFiles = document.getElementById('PanditImage').files.length;
                if (totalFiles > 0) {
                    uploadFile();
                }
                var model = {
                    countryId: parseInt($("#Selectcountry").val()),
                    stateId: parseInt($("#SelectState").val()),
                    cityId: parseInt($("#SelectCity").val()),
                    templeId: parseInt($("#SelectTemple").val()),
                    experiences: $.trim($("#Experiences").val()),
                    // pujaCategory: $.trim($("#PujaCategory").val()),
                    religion: $.trim($("#Religion").val()),
                    motherTongue: $.trim($("#MotherTongue").val()),
                    caste: $.trim($("#Caste").val()),
                    gothram: $.trim($("#Gothram").val()),
                    aadharCard: $.trim($("#AadharCard").val()),
                    qualification: $.trim($("#Qualification").val()),
                    panditName: $.trim($("#PanditName").val()),
                    address: $.trim($("#Address").val()),
                    primaryPhone: $.trim($("#PrimaryPhone").val()),
                    alternatePhone: $.trim($("#AlternatePhone").val()),
                    mailId: $.trim($("#MailId").val()),
                    dateOfBirth: $.trim($("#DateOfBirth").val()) == '' ? null : $.trim($("#DateOfBirth").val().replace(/\//g, '-')),
                    password: $.trim($("#Password").val()),
                    // message: $.trim($("#Message").val()),
                    panditImage: imgPath,
                    createdBy: @Context.Session.GetInt32("UserId"),
                };

                console.log(model);

                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/Pandit/PanditCreate",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status === 200) {
                            Swal.fire({
                                icon: "success",
                                title: "Pandit Create",
                                text: "Successfully Created!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });

                            //preloader.addClass("d-none");
                        } else if (data.status === "Duplicate") {
                            Swal.fire({
                                icon: "warning",
                                title: "Pandit Already Exists!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else if (data.status === "error") {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: data.responseMsg,
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        } else {
                            Swal.fire({
                                icon: "warning",
                                title: "Validation Alert!",
                                text: "Something unexpected!",
                            }).then(function () {
                                location.reload(); // Refresh the page
                            });
                        }
                        preloader.addClass("d-none");
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });


            }
        });

        function uploadFile() {
            var totalFiles = document.getElementById('PanditImage').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('PanditImage').files;
                formData.append("file", files[0]);
                $.ajax(
                    {
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",
                        success: function (data) {
                            imgPath = data;

                        },
                        error: function (data) {
                            window.location.replace('/Message/SessionExpire');
                        }
                    }
                );
            }

        }

    </script>

}